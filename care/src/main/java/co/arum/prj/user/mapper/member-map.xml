<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="co.arum.prj.user.mapper.MemberMap">
	<select id="getMemberAll" resultType="MemberVO">
		SELECT * FROM MEMBER
	</select>

	<select id="getMember" resultType="MemberVO" parameterType="MemberVO">
		SELECT * FROM MEMBER WHERE ID=#{id}
	</select>

	<select id="MemberLoginCheck" resultType="MemberVO" parameterType="MemberVO">
		SELECT * FROM MEMBER WHERE ID=#{id} AND PW=#{pw}
	</select>
	
	<select id="MemberSearch" resultType="MemberVO" parameterType="MemberVO">
	</select>
	
	<insert id="insertMember">
		INSERT INTO MEMBER(id,PW,NAME,ADDR,TEL,GENDER,HOBBY,FILENAME,AUTH)
		VALUES(#{id},#{pw},#{name},#{addr},#{tel},#{gender},#{hobby},#{filename},#{auth});
	</insert>
	
	<update id="updateMember">
		UPDATE MEMBER 
		SET PW=#{pw},NAME=#{name},ADDR=#{addr},TEL=#{tel},GENDER=#{gender},HOBBY=#{hobby},FILENAME=#{filename} 
		WHERE ID=#{id}
	</update>
	
	<delete id="deleteMember">
		DELETE FROM MEMBER WHERE ID=#{id}
	</delete>
</mapper>